<p id="notice"><%= notice %></p>

<h1>Ruby Listings</h1>
<div class="container d-flex justify-content-center">
  <div class="row">
    <%= @listings.each do |listing| %>
      <div class="col-md-4">
        <div class="card" style="width: 18rem;">
          <% if @programming_language.picture.attached? %>
            <%= image_tag @programming_language.picture, class: "card-img-top"%>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text"><%= listing.tutor_name %></p>
            <p class="card-text"><%= listing.tutor_email %></p>
            <p class="card-text"><%= listing.description %></p>
            <p class="card-text"><%= listing.price %></p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
        <%= link_to 'Edit', edit_programming_language_path(@programming_language) %> |
        <%= link_to 'Back', programming_languages_path %>
      </div>
    <% end %>
  </div>
</div>
  