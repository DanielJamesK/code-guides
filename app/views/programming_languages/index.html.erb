<h1>Programming Languages</h1>
<br>
<% if (current_user.has_role?(:admin)) %>
  <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Image</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @programming_languages.each do |programming_language| %>
          <tr>
            <td><%= sanitize programming_language.name %></td>
            <td><%= sanitize programming_language.description %></td>
            <td><% if programming_language.picture.attached? %>
              <%= cl_image_tag(programming_language.picture.key, crop: :scale, cloud_name: "dvlberf5o", width: 50) %>
            <% else %>
              <%= image_tag("codeimage2.jpg", width: "50")%>
            <% end %></td>
            <td><%= sanitize programming_language.user.email %></td>
            <td><%= link_to 'Show', programming_language, class: "btn btn-secondary" %></td>
            <td><%= link_to 'Edit', edit_programming_language_path(programming_language), class: "btn btn-secondary" %></td>
            <td><%= link_to 'Destroy', programming_language, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'New Programming Language', new_programming_language_path, class: "btn btn-primary btn-margin" %>
    <hr>
  </div>
<% end %>
<div class="container d-flex justify-content-center">
  <div class="row d-flex justify-content-center">
    <% @programming_languages.each do |programming_language| %>
      <div class="col-md-auto d-flex align-items-stretch">
        <div class="card card-margin" style="width: 18rem;">
          <% if programming_language.picture.attached? %>
            <%= cl_image_tag(programming_language.picture.key, crop: :scale, cloud_name: "dvlberf5o", class: "card-img-top" ) %>
          <% else %>
            <%= image_tag("codeimage2.jpg", class: "card-img-top")%>
          <% end %>
          <div class="card-body">
            <h5 class="card-title text-center "><%= sanitize programming_language.name %></h5>
            <h6>Description</h6>
            <p class="card-text"><%= sanitize programming_language.description %></p>
            <%= link_to "See Listings", programming_language, class: "btn btn-primary" %>
            <div class="container d-flex justify-content-center ">
            </div>
          </div>
        </div>
        </p>
      </div>
    <% end %>
  </div>
</div>
