
<%= simple_form_for(@listing) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :tutor_name, input_html: {value: "#{current_user.first_name + ' ' + current_user.last_name}"} %>
    <%= f.input :tutor_email, input_html: {value: current_user.email}%>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.association :programming_language %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
